<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="bodybg" stylesheets="@data/mainBackground.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <Label text="CHESS">
      <font>
         <Font name="System Bold" size="35.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </Label>
   <Button fx:id="multiplayerBtn" mnemonicParsing="false" onAction="#startMultiplayer" text="Play">
      <font>
         <Font size="20.0" />
      </font>
      <padding>
         <Insets left="18.0" right="18.0" />
      </padding>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#openSettings" text="Settings">
      <font>
         <Font size="20.0" />
      </font>
      <padding>
         <Insets left="30.0" right="30.0" />
      </padding>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Button>
   <Button fx:id="quitBtn" mnemonicParsing="false" onAction="#quitGame" text="Quit">
      <font>
         <Font size="20.0" />
      </font>
      <padding>
         <Insets left="47.0" right="47.0" />
      </padding>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Button>

</VBox>
