<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="bodybg" stylesheets="@data/mainBackground.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SettingsController">

    <Label text="SETTINGS">
        <font>
            <Font name="System Bold" size="35.0" />
        </font>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </Label>
    <Button fx:id="aiDifficultyBtn" onAction="#aiDifficulty" text="AI Difficulty">
        <font>
            <Font size="20.0" />
        </font>
        <padding>
            <Insets left="13.0" right="13.0" />
        </padding>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin></Button>
    <Button fx:id="musicBtn" mnemonicParsing="false" onAction="#changeMusic" text="Change Music">
        <font>
            <Font size="20.0" />
        </font>
        <padding>
            <Insets left="18.0" right="18.0" />
        </padding>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Button>
    <Button fx:id="fullscreenBtn" mnemonicParsing="false" onAction="#fullscreen" text="Fullscreen">
        <font>
            <Font size="20.0" />
        </font>
        <padding>
            <Insets left="30.0" right="30.0" />
        </padding>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Button>
    <Button fx:id="backBtn" mnemonicParsing="false" onAction="#back" text="Back">
        <font>
            <Font size="20.0" />
        </font>
        <padding>
            <Insets left="47.0" right="47.0" />
        </padding>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Button>

</VBox>
